<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>NBA Standings</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<script type="text/javascript" src="Scripts/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="Scripts/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Exo&display=swap');
  
  body {
    background: #007bff;
    background: linear-gradient(to right, #0062E6, #FF0000);
  }

  .card-group {
    margin: 5px;
  }
  .card {
    align-items: center;
    flex-direction: row;
    border-radius: 50%;
    border-color: black;
    border-width: 2px;
  }
  .card img {
    height: 50px;
    width: auto;
    background-size: cover;
  }

  @media (min-width: 768px) {
  .animate {
    animation-duration: 0.3s;
    -webkit-animation-duration: 0.3s;
    animation-fill-mode: both;
    -webkit-animation-fill-mode: both;
    }
  }
  
  @keyframes slideIn {
    0% {
      transform: translateY(1rem);
      opacity: 0;
    }
  
    100% {
      transform: translateY(0rem);
      opacity: 1;
    }
  
    0% {
      transform: translateY(1rem);
      opacity: 0;
    }
  }
  
  @-webkit-keyframes slideIn {
    0% {
      -webkit-transform: transform;
      -webkit-opacity: 0;
    }
  
    100% {
      -webkit-transform: translateY(0);
      -webkit-opacity: 1;
    }
  
    0% {
      -webkit-transform: translateY(1rem);
      -webkit-opacity: 0;
    }
  }
  
  .slideIn {
    -webkit-animation-name: slideIn;
    animation-name: slideIn;
  }

</style>

<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">NBA Standings</a>

<div class="btn-group dropstart">
  <% if(conf) { %>
  <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
    <% if(conf == 'west') { %>
      West
    <% } %>
      <% if(conf == 'east') { %>
      East
    <% } %>
  </button>
  <% } else { %>
  <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
    Select A Conference
  </button>
  <% } %>


  <ul class="dropdown-menu">
    <li><a class="dropdown-item" href="/?conference=west">West</a></li>
    <li><a class="dropdown-item" href="/?conference=east">East</a></li>
    <li><a class="dropdown-item" href="/">Reset</a></li>
  </ul>
    
</div>
    
  </div>
</nav>

<% if(conf) { %>
      <% teams.forEach(e => { %>
        <div class="card-group mx-auto" style="width: 50rem">
  <div class="card">
    <div class="card-body text-center">
      <img src=<%= e.logo %> class="card-img-top" alt="...">
    </div>
  </div>
  <div class="card" style="flex-grow: 2">
    <div class="card-body text-center">
      <h2 class="card-title"><%= e.name %></h2>
    </div>
  </div>
  <div class="card">
    <div class="card-body text-center">
      <h2 class="card-text"><%= e.win + "-" + e.loss %></h2>
    </div>
  </div>
</div>
      <% }) %>
<% } else { %>
  <h1> Please Select A Conference</h1>
<% } %>


</body>
